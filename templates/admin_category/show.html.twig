{% extends 'layout.html.twig' %}
{% block title %}Category{% endblock %}
{% block body %}
	<main class="container">
        <h1>Category</h1>
        <table class="table text-white">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="btn btn-info me-3 col-1" href="{{ path('admin_category_edit', {'id': category.id}) }}">Edit</a>
            {{ include('admin_category/_delete_form.html.twig') }}
        </div>
    </main>
{% endblock %}
