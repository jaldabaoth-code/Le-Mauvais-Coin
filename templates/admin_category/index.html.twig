{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<main class="container-fluid">
		<h1>Category index</h1>

		<table class="table table-hover table-light">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.name }}</td>
						<td>
							<a class="btn btn-primary btn-sm" href="{{ path('admin_category_edit', {'id': category.id}) }}">Éditer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a class="btn btn-success" href="{{ path('admin_category_new') }}">Ajouter catégorie</a>
	</main>
{% endblock %}
