{% extends 'layout.html.twig' %}
{% block title %}Category index{% endblock %}
{% block body %}
	<main class="container">
		<h1>Category index</h1>
		<table class="table table-hover table-light">
			<thead>
				<tr>
					<th>Name</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>
							<a href="{{ path('admin_category_show', {'id': category.id}) }}">{{ category.name }}</a>
						</td>
						<td>
							<a class="btn btn-primary btn-sm" href="{{ path('admin_category_edit', {'id': category.id}) }}">Edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">No records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a class="btn btn-success" href="{{ path('admin_category_new') }}">Add category</a>
	</main>
{% endblock %}
