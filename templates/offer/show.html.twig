{% extends 'layout.html.twig' %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('offer') }}
{% endblock %}
{% block title %}
	{{ parent() }} Détail offre
{% endblock %}
{% block body %}
	<main class="container">
		<h1>{{ offer.title }}</h1>
		<div>
			<div class="d-flex">
				<img class="w-50 me-2 mb-3" src="https://loremflickr.com/320/240"/>
				<div class="text-dark fw-bold" colspan="2">
					<div>{{ offer.createdAt|date('d/m/Y') }}</div>
					<div>{{ offer.category.name }}</div>
					<div>{{ offer.price }}€</div>
				</div>
			</div>
			<h2>Description</h2>
			<p>{{ offer.description }}</p>
		</div>
	</main>
{% endblock %}
